<Page x:Class="Cinema_Shashin.Pages.AddCin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema_Shashin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCin" Background="White">

    <Grid>
        <Grid VerticalAlignment="Top" Background="LightGoldenrodYellow">
            <Label Content="Добавить кинотеатр" x:Name="mainLabel" FontSize="26" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,10"/>
        </Grid>
        <Grid VerticalAlignment="Stretch" Margin="0,65,0,0">
            <StackPanel x:Name="parent">
                <TextBlock Text="Введите название:" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,10,0,0"/>
                <TextBox x:Name="titleTb" HorizontalAlignment="Stretch" Margin="15,20,15,0" Height="25"/>
                <TextBlock Text="Введите количество залов:" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,20,0,0"/>
                <TextBox x:Name="hallCountTb" HorizontalAlignment="Stretch" Margin="15,20,15,0" Height="25"/>
                <TextBlock Text="Введите количество мест:" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,20,0,0"/>
                <TextBox x:Name="seatsCountTb" HorizontalAlignment="Stretch" Margin="15,20,15,0" Height="25"/>
                <Button Content="Добавить кинотеатр" Click="editCinema" Foreground="White" HorizontalAlignment="Stretch" Margin="15,20,15,0" Height="25" BorderThickness="0" Background="MediumSeaGreen"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
